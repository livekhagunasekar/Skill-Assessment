@page
@model EditModel
@{
    ViewData["Title"] = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Skill Assessment</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> <!--Bootsrap css -->

    <style>
        h2 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: #0d6efd;
            margin-bottom: 2rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            text-shadow: 1px 1px 3px rgba(13, 110, 253, 0.3);
        }

        form {
            max-width: 500px;
            margin: 0 auto;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        label {
            font-weight: 600;
            margin-top: 1rem;
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 0.5rem 0.75rem;
            font-size: 1rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            input[type="text"]:focus, input[type="number"]:focus {
                border-color: #0d6efd;
                outline: 0;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        button {
            margin-top: 2rem;
            width: 100%;
            padding: 0.6rem;
            font-size: 1.1rem;
            font-weight: 700;
        }

        p.editing-info {
            max-width: 500px;
            margin: 1rem auto 0 auto;
            font-size: 1.1rem;
            font-weight: 500;
            text-align: center;
            color: #198754;
        }
    </style>
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />

        <label asp-for="User.user_name">User Name:</label>
        <input asp-for="User.user_name" class="form-control" />

        <label asp-for="User.user_no">User No:</label>
        <input asp-for="User.user_no" class="form-control" />

        <button type="submit" class="btn btn-primary">Update</button>
    </form>

    @if (!string.IsNullOrEmpty(Model?.User?.user_name))
    {
        <p class="editing-info">Editing user: <strong>@Model.User.user_name</strong></p>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
